<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eventme.eventme.NewEvent"
    android:background="@drawable/backphoto">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/uploadPhoto"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginLeft="22dp"
            android:textStyle="normal|bold"
            android:gravity="center"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif"
            android:hint="@string/description"
            tools:gravity="top"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/edittextstyle"
            android:gravity="top" />

        <ImageButton
            android:layout_width="match_parent"
            app:srcCompat="@drawable/fileupload"
            android:id="@+id/UploadButton"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            tools:ignore="ContentDescription" />

    </GridLayout>

    <Button
        android:text="@string/date"
        android:id="@+id/DateButton"
        android:background="@drawable/roundbutton"
        android:typeface="serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:onClick="ClickDate"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/hour"
        android:id="@+id/TimeButton"
        android:background="@drawable/roundbutton"
        android:typeface="serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_alignBaseline="@+id/DateButton"
        android:layout_alignBottom="@+id/DateButton"
        android:layout_alignStart="@+id/LocationButton"
        android:onClick="ClickTime" />

    <Button
        android:text="@string/save"
        android:id="@+id/SaveBtn"
        android:background="@drawable/roundbutton"
        android:typeface="serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/DateButton"
        android:layout_alignStart="@+id/DateButton"
        android:onClick="Done" />

    <Button
        android:text="@string/location"
        android:id="@+id/LocationButton"
        android:background="@drawable/roundbutton"
        android:typeface="serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="18dp"
        android:layout_alignBaseline="@+id/SaveBtn"
        android:layout_alignBottom="@+id/SaveBtn"
        android:layout_alignParentEnd="true"
        android:onClick="ClickLocation" />

    <Button
        android:text="@string/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SaveButtonTime"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:elevation="0dp"
        android:background="@drawable/shapebtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/background_light"
        android:onClick="ClickSave"
        tools:ignore="UnusedAttribute" />

    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/calendarView"
        android:dateTextAppearance="@style/TextAppearance.AppCompat" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:visibility="visible"
        android:timePickerMode="spinner"
        android:layout_alignTop="@+id/DateButton"
        android:layout_centerHorizontal="true"
        tools:ignore="UnusedAttribute" />

</RelativeLayout>

